<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/txtInstructionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הוראות המשחק"
            android:textSize="22sp"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/txtInstructionsBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="בכל סיבוב מוצגות 4 מילים באנגלית בצד שמאל ו-4 תרגומים בצד ימין.\n\nהמטרה שלך היא להתאים כל מילה לתרגום הנכון.\n\nשחקנים משחקים בתורות.\nהתאמה נכונה מוסיפה נקודות, התאמה שגויה מורידה נקודות או מעבירה תור.\n\nבסיום כל הסיבובים – השחקן עם הניקוד הגבוה יותר מנצח."
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnStartFromInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="התחל משחק"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>

